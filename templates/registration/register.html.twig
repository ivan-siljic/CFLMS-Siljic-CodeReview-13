{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

        <div class="row">
            <div class="col-12 col-md-10 col-lg-6 col-xl-6 mt-5 mx-auto">
                <div class="card m-5">
                    <div class="card-header">
                        <h1>Sign Up.</h1>
                    </div>
                    
                    <div class="p-3">
                        {{ form_start(registrationForm) }}

                            <div class="mt-2">
                                {{ form_label(registrationForm.email, 'Email adress') }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': "Enter Your Email"}}) }}
                           </div>

                            <div class="mt-4">
                                {{ form_label(registrationForm.plainPassword, 'Password') }}
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': "Enter Password"}}) }}
                            </div>
                            
                            <div class="mt-4 form-check">
                                <input type="radio"{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input' }}) }}
                                <label class="form-check-label">{{ form_label(registrationForm.agreeTerms, 'Agree to terms of service')}}</label>
                            </div>
                            
                            <button type="submit" class="mt-3 btn btn-secondary">Sign Up</button>
                        {{ form_end(registrationForm) }}
                    </div>

                    <div class="card-footer "> 
                        <a class="text-dark" href="{{ path('app_login') }}">Sign in here</a>
                    </div>
                    

                </div>
            </div>
        </div>

{% endblock %}
