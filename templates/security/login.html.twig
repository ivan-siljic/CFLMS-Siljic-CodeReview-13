{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

        <div class="row">
            <div class="col-12 col-md-10 col-lg-6 col-xl-6 mt-5 mx-auto">
                <div class="card m-5">
                    <div class="card-header">
                        <h1>Sign In.</h1>
                    </div>

                    <div class="p-3">
                        <label for="inputEmail" class="mt-2">Email adress</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder= "Enter Your Email" required autofocus>
                        <label for="inputPassword" class="mt-3">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder= "Enter Password" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}

                        <button class="mt-4 btn btn-secondary" type="submit">
                            Sign In
                        </button>
                    </div>

                    <div class="card-footer "> 
                        <a class="text-dark" href="{{ path('app_register') }}">Sign up Here</a>
                    </div>
                    

                </div>
            </div>
        </div>
</form>
{% endblock %}
