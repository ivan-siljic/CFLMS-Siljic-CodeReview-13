{% extends 'base.html.twig' %}

{% block title %}Show{% endblock %}

{% block body %}

    {{ include('navbar.html.twig') }}

    <div class="container">
        <div class="row">
            <div class="col-6 mt-3">
                 <a href="{{ path('event_index') }}">back to list</a>
            </div>
        </div>
        <div class="row">
            <div class="col-6 my-3">
                <h1>Show</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-10 mb-5">
                <div class="card h-100 shadow-sm"> 
                                <div class="card-header text-uppercase bg-dark text-light">
                                    {{ event.name }}
                                </div>
                            
                                    <img class="d-none d-md-block" src="{{ event.image }}">
                                
                                    <div class="card-body">
                                        <h5 class="mb-3"><span class="badge badge-secondary p-2">{{ event.type }}</span></h5>

                                        <div class="mt-auto lead"> 
                                            <h5><mark class="p-1">{{ event.date|date("F jS \\a\\t g:ia" ) }}</mark></h5>
                                        </div>
                                        <div class="mt-3">
                                        <h7 class="text-muted">
                                            <strong>
                                                {{ event.zip }} {{ event.city }}, {{ event.street }} {{ event.houseNumber }}
                                            </strong>
                                        </h7>                      
                                        </div>
                                        <div class="my-4">
                                            <p class="font-italic font-weight-light border-top px-1 py-2 bg-light rounded">{{ event.description }}</p>
                                        </div>
                                        <div class="mb-3">
                                            <p class="lead">Max. <strong>{{ event.capacity }}</strong> viewers on this stream possible</p>
                                        </div>

                                        <div class="row p-3">  
                                            <button class="btn btn-info">
                                                <a class="text-light" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
                                            </button>
                                            <div class="col-6">
                                                {{ include('event/_delete_form.html.twig') }}
                                            </div>
                                        </div>
                                    </div>
                                        
                                    <div class="card-footer">
                                        <small class="text-muted"><strong>Kontakt:</strong> 
                                        <br>    
                                        <a href="{{ event.url }}">{{ event.url }}</a>, {{ event.email }}, Tel: {{ event.phoneNumber }}</small>
                                    </div>
                            </div>
            </div>
{{ include('sidebar.html.twig') }}
            {# <div class="col-2 py-2 bg-white rounded h-50" style="border: 1px solid silver">
                <h5>Filter by Type:</h5> #}
                    {# {% for event in events %}

                    <a href="{{ path('filter_result', {'result': event.type}) }}">{{ event.type }}</a>
                    <br>

                    {% endfor %}    #}

            {# </div> #}
        </div>
    </div>

   {{ include('footer.html.twig') }}
{% endblock %}
