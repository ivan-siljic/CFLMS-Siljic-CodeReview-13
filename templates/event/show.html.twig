{% extends 'base.html.twig' %}

{% block title %}Show{% endblock %}

{% block body %}

    {{ include('navbar.html.twig') }}

        <div class="row">
            <div class="col-6 mt-5">
                <h1>Show</h1>
            </div>
        </div>

        <div class="row">

            <div class="col-12 d-lg-none">
                {{ include('sidebar.html.twig') }}
            </div>

            <div class="col-12 col-lg-10">   

                <div class="row mb-3">
                    <div class="col-12 d-flex justify-content-end">
                        <a class="text-secondary text-end" href="{{ path('event_new') }}">Create new</a>
                    </div>
                </div>    

                <div class="row">
                        <div class="col-12">
                            <div class="card h-100 shadow-sm"> 
                                <div class="card-header bg-dark">
                                    <div class="row">
                                        <div class="col-10 text-uppercase text-light my-auto">
                                            {{ event.name }}
                                        </div>
                                        <div class="col-2 d-flex justify-content-end">
                                                <a class="btn btn-light" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
                                        </div>
                                    </div>
                                </div>
                            
                                    <img class="d-none d-md-block" src="{{ event.image }}">
                                
                                    <div class="card-body">
                                        <h5 class="mb-3"><span class="badge badge-secondary p-2">{{ event.type }}</span></h5>

                                        <div class="mt-auto lead"> 
                                            <h5><mark class="p-1">{{ event.date|date("F jS \\a\\t g:ia" ) }}</mark></h5>
                                        </div>
                                        <div class="mt-3">
                                        <h7 class="text-muted">
                                            <strong>
                                                {{ event.zip }} {{ event.city }}, {{ event.street }} {{ event.houseNumber }}
                                            </strong>
                                        </h7>                      
                                        </div>
                                        <div class="my-4">
                                            <p class="font-italic font-weight-light border-top px-1 py-2 bg-light rounded">{{ event.description }}</p>
                                        </div>
                                        <div class="mb-3">
                                            <p class="lead">Max. <strong>{{ event.capacity }}</strong> viewers on this stream possible</p>
                                        </div>

                                        <div class="row p-3">  
                                            <div class="col-6">
                                                {{ include('event/_delete_form.html.twig') }}
                                            </div>
                                        </div>
                                    </div>
                                        
                                    <div class="card-footer">
                                        <small class="text-muted"><strong>Kontakt:</strong> 
                                        <br>    
                                        <a class="text-secondary" href="{{ event.url }}">{{ event.url }}</a>, {{ event.email }}, Tel: {{ event.phoneNumber }}</small>
                                    </div>
                            </div>
                        </div>
                </div>
            </div>
            <div class="d-none d-lg-block col-lg-2">
                {{ include('sidebar.html.twig') }}
            </div>
        </div>

        <div class="row">
            <div class="col-6 my-5">
                 <a class="text-dark" href="{{ path('event_index') }}">back to list</a>
            </div>
        </div>

   {{ include('footer.html.twig') }}
{% endblock %}
