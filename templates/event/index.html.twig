{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}

    {{ include('navbar.html.twig') }}

    
        <div class="row">
            <div class="col-6 mt-5">
                <h1>Events</h1>
            </div>
        </div>

        <div class="row">

            <div class="col-12 d-lg-none">
                {{ include('sidebar.html.twig') }}
            </div>

            <div class="col-12 col-lg-10">   

                <div class="row mb-3">
                    <div class="col-12 d-flex justify-content-end">
                        <a class="text-secondary text-end" href="{{ path('event_new') }}">Create new</a>
                    </div>
                </div>    

                <div class="row">
                
                    {% for event in events %}
                        
                            <div class="col-12 col-lg-6 mb-4">
                                <div class="card h-100 shadow-sm"> 
                                    <div class="card-header text-uppercase bg-dark text-light">
                                        {{ event.name }}
                                    </div>
                                
                                        <img class="d-none d-md-block" src="{{ event.image }}">
                                    
                                        <div class="card-body">
                                            <div class="mt-auto lead"> 
                                                <h5><mark class="p-1">{{ event.date|date("F jS") }}</mark></h5>
                                                <div class="my-3">{{ event.date|date("g:ia") }} </div>
                                            </div>

                                            <button class="btn btn-secondary my-1"><a class="text-light" href="{{ path('event_show', {'id': event.id}) }}">show</a> </button>
                                        </div>
                                            
                                        <div class="card-footer">
                                            <small class="text-muted"><strong>URL:</strong> 
                                            <br>    
                                            <a href="{{ event.url }}" class="text-dark">{{ event.url }}</a></small>
                                        </div>
                                </div>
                            </div>              
                        
                    {% endfor %}

                </div>
                    
            </div>

            <div class="d-none d-lg-block col-lg-2">
                     {{ include('sidebar.html.twig') }}
            </div>

           

        </div>

   {{ include('footer.html.twig') }}
{% endblock %}
