{% extends 'base.html.twig' %}

{% block title %}Results{% endblock %}
    
{% block body %}
    <h1>Results</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.image }}</td>
                <td>{{ result.name }}</td>
                <td>{{ result.date ? result.date|date('F j, Y, g:i a') : '' }}</td>
                
                <td>
                    <a href="{{ path('event_show', {'id': result.id}) }}">show</a>
                    <a href="{{ path('event_edit', {'id': result.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('event_new') }}">Create new</a>

    <a href="{{ path('event_index') }}">back to list</a>
   
{% endblock %}